{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "noEmit": false,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"]
}